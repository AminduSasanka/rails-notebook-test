<h1>Welcome <%= current_user ? current_user.email : "to Notebook" %></h1>
<p class="mb-5">Find me in app/views/pages/index.html.erb</p>

<h3 class="mt-5 mb-4 fw-normal">Your lecture sessions</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Subject</th>
      <th scope="col">Lecture topic</th>
      <th scope="col">Time</th>
      <th scope="col">Instructor</th>
    </tr>
  </thead>
    <% if @appoinments && @appoinments.length > 0 %>  
      <tbody>
        <% @appoinments.each do |appoinment| %>
          <tr>
            <td><%= link_to appoinment.lecture.subject.name, subject_path(appoinment.lecture.subject) %></td>
            <td><%= link_to appoinment.lecture.topic, subject_lecture_path(appoinment.lecture.subject, appoinment.lecture) %></td>
            <td><%= appoinment.lecture.time %></td>
            <td><%= appoinment.lecture.instructor %></td>   
          </tr>
        <% end %>
      </tbody>
    <% end %>
</table>

<% unless @appoinments && @appoinments.length > 0 %>
  <div class="d-flex flex-row justify-content-center align-items-center bg-light p-5">
    <h4 class=" my-5">You haven't reserved any seats for lecture sessions</h4>
  </div>
<% end %>


